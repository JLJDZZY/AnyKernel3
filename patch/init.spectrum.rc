# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Balance (default profile)
on property:persist.spectrum.profile=0
    # CPU0 governor
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpufreq/policy0/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpufreq/policy0/schedutil/up_rate_limit_us 500
    write /sys/devices/system/cpu/cpufreq/policy0/schedutil/down_rate_limit_us 20000
    # CPU4 governor
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpufreq/policy4/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpufreq/policy4/schedutil/up_rate_limit_us 500
    write /sys/devices/system/cpu/cpufreq/policy4/schedutil/down_rate_limit_us 20000
    # CPU freq control
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1766400
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 2803200
    # SchedTune value for foreground/top-app
    write /dev/stune/foreground/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.boost 1
    write /dev/stune/top-app/schedtune.prefer_idle 1
    # Custom boost values [cpu-input-boost]
    write /sys/module/cpu_input_boost/parameters/input_boost_duration 500
    write /sys/module/cpu_input_boost/parameters/input_boost_freq_hp 902400
    write /sys/module/cpu_input_boost/parameters/input_boost_freq_lp 1056000
    write /sys/module/cpu_input_boost/parameters/max_boost_freq_hp 1996800
    write /sys/module/cpu_input_boost/parameters/max_boost_freq_lp 1766400
    write /sys/module/cpu_input_boost/parameters/remove_input_boost_freq_perf 825600
    write /sys/module/cpu_input_boost/parameters/remove_input_boost_freq_lp 576000
    write /sys/module/cpu_input_boost/parameters/frame_boost_freq_hp 902400
    write /sys/module/cpu_input_boost/parameters/frame_boost_freq_lp 902400
    write /sys/module/cpu_input_boost/parameters/dynamic_stune_boost 20
    write /sys/module/cpu_input_boost/parameters/frame_stune_boost 10
    write /sys/module/cpu_input_boost/parameters/wake_boost_duration 500
    # GPU governor
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor "msm-adreno-tz"
    # PEWQ
    write /sys/module/workqueue/parameters/power_efficient Y
    # dmsg output
    write /dev/kmsg "mcd: loaded profile: Balance"

