import /init.spectrum.rc

on early-init
    # Tweak IO performance during boot up
    setprop sys.io.scheduler noop
    write /sys/block/dm-0/queue/read_ahead_kb 2048
    write /sys/block/dm-1/queue/read_ahead_kb 2048
    write /sys/block/sda/queue/read_ahead_kb 2048
    write /sys/block/sda/queue/iostats 0
    write /sys/block/sda/queue/nr_requests 256
    write /sys/block/sde/queue/read_ahead_kb 2048
    write /sys/block/sde/queue/iostats 0
    write /sys/block/sde/queue/nr_requests 256
    write /sys/block/sda/queue/iosched/slice_idle 0

on init
    # Dynamic Stune Boost during sched_boost
    write /dev/stune/top-app/schedtune.sched_boost 10

    # Set default schedTune value for foreground/top-app
    write /dev/stune/foreground/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.boost 1
    write /dev/stune/top-app/schedtune.prefer_idle 1

    # zRAM configuration
    write /sys/block/zram0/comp_algorithm lz4
    write /sys/block/zram0/disksize 536870912
    write /sys/block/zram0/max_comp_streams 4
    write /proc/sys/vm/page-cluster 0
    write /proc/sys/vm/swappiness 10

on boot
    # Update foreground and background cpusets
    write /dev/cpuset/top-app/cpus 0-3
    write /dev/cpuset/foreground/boost/cpus 0-3
    write /dev/cpuset/foreground/cpus 0-3
    write /dev/cpuset/background/cpus 0-3
    write /dev/cpuset/system-background/cpus 0-3

    # Enable sched boost in boot
    write /proc/sys/kernel/sched_boost 1

    # Set light thermal restrictions while optimizing apps
    # [throttle_freq_LITTLE, throttle_freq_big, throttle_temp, unthrottle_temp]
    write /sys/kernel/msm_thermal/zone0 "1286400 1670400 46 44"
    write /sys/kernel/msm_thermal/zone1 "1286400 1516800 50 46"
    write /sys/kernel/msm_thermal/zone2 "1036800 1286400 55 50"
    write /sys/kernel/msm_thermal/zone3 "768000 748800 65 55"
    write /sys/kernel/msm_thermal/enabled 1

on post-fs-data
    # Bind mount modules and custom system blobs
    mount auto /perfboostsconfig.xml /system/vendor/etc/perf/perfboostsconfig.xml bind
    mount auto /modules/ansi_cprng.ko /system/lib/modules/ansi_cprng.ko bind
    mount auto /modules/backlight.ko /system/lib/modules/backlight.ko bind
    mount auto /modules/br_netfilter.ko /system/lib/modules/br_netfilter.ko bind
    mount auto /modules/evbug.ko /system/lib/modules/evbug.ko bind
    mount auto /modules/generic_bl.ko /system/lib/modules/generic_bl.ko bind
    mount auto /modules/lcd.ko /system/lib/modules/lcd.ko bind
    mount auto /modules/rdbg.ko /system/lib/modules/rdbg.ko bind
    mount auto /modules/spidev.ko /system/lib/modules/spidev.ko bind
    mount auto /modules/wil6210.ko /system/lib/modules/wil6210.ko bind
    mount auto /modules/wlan.ko /system/lib/modules/qca_cld/qca_cld_wlan.ko bind

on enable-low-power
    # Disable sched boost
    write /proc/sys/kernel/sched_boost 0

    # Stune-Boost
    write /dev/stune/top-app/schedtune.sched_boost 10
    write /dev/stune/foreground/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.boost 0
    write /dev/stune/top-app/schedtune.prefer_idle 1

    # Stune configuration
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost 10
    write /sys/module/cpu_boost/parameters/dynamic_stune_boost_ms 300

    # Configure governor settings for little cluster
    # Will only work if using EAS
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/down_rate_limit_us 10000
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/iowait_boost_enable 0

    # Online CPU2
    write /sys/devices/system/cpu/cpu2/online 1

    # Configure governor settings for big cluster
    # Will only work if using EAS
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "schedutil"
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/up_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/down_rate_limit_us 10000
    write /sys/devices/system/cpu/cpu2/cpufreq/schedutil/iowait_boost_enable 0

    # Touchboost configuration
    write /sys/module/msm_performance/parameters/touchboost 0

    # Input boost configuration
    write /sys/module/cpu_boost/parameters/input_boost_enabled 1
    write /sys/module/cpu_boost/parameters/input_boost_freq "0:844800 2:748800"
    write /sys/module/cpu_boost/parameters/input_boost_ms 100

    # CPUFreq control
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1593600
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 307200
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 2342400

    # Enable Adaptive LMK
    write /sys/module/lowmemorykiller/parameters/enable_adaptive_lmk 1
    write /sys/module/lowmemorykiller/parameters/vmpressure_file_min 81250

    # Set I/O scheduler
    setprop sys.io.scheduler "maple"
    
    # Tweak IO performance after boot complete
    write /sys/block/dm-0/queue/scheduler "maple"
    write /sys/block/dm-1/queue/scheduler "maple"
    write /sys/block/sda/queue/scheduler "maple"
    write /sys/block/sde/queue/scheduler "maple"
    write /sys/block/dm-0/queue/read_ahead_kb 256
    write /sys/block/dm-1/queue/read_ahead_kb 256
    write /sys/block/sda/queue/read_ahead_kb 256
    write /sys/block/sda/queue/iostats 1
    write /sys/block/sda/queue/nr_requests 128
    write /sys/block/sde/queue/read_ahead_kb 256
    write /sys/block/sde/queue/iostats 1
    write /sys/block/sde/queue/nr_requests 128
    
    # update cpusets now that boot is complete and we want better load balancing
    write /dev/cpuset/top-app/cpus 0-3
    write /dev/cpuset/foreground/boost/cpus 2-3
    write /dev/cpuset/foreground/cpus 0-2
    write /dev/cpuset/background/cpus 0
    write /dev/cpuset/system-background/cpus 0-1,3

    # Set thermal restrictions
    write /sys/kernel/msm_thermal/enabled 0
    write /sys/kernel/msm_thermal/zone0 "1516800 2246400 42 41"
    write /sys/kernel/msm_thermal/zone1 "1440000 2150400 43 42"
    write /sys/kernel/msm_thermal/zone2 "1363200 2054400 44 43"
    write /sys/kernel/msm_thermal/zone3 "1363200 1977600 45 44"
    write /sys/kernel/msm_thermal/zone4 "1286400 1900800 46 45"
    write /sys/kernel/msm_thermal/zone5 "1286400 1824000 48 46"
    write /sys/kernel/msm_thermal/zone6 "1132800 1670400 50 48"
    write /sys/kernel/msm_thermal/zone7 "1056000 1363200 55 50"
    write /sys/kernel/msm_thermal/zone8 "902400 1056000 59 55"
    write /sys/kernel/msm_thermal/zone9 "844800 902400 61 59"
    write /sys/kernel/msm_thermal/zone10 "768000 748800 64 61"
    write /sys/kernel/msm_thermal/sampling_ms 4000
    write /sys/kernel/msm_thermal/enabled 1

    # according to Qcom this legacy value improves first launch latencies
    # stock value is 512k
    setprop dalvik.vm.heapminfree 2m

    # Disable some logging
    stop oemlogkit
    write /sys/module/debug/parameters/enable_event_log 0

    # Disable Serial Console
    write /sys/module/printk/parameters/console_suspend "N"

    # Set sync wakee policy tunable
    write /proc/sys/kernel/sched_prefer_sync_wakee_to_waker 1

    # exec user scripts
    exec u:r:init:s0 -- /init.special_power.sh
    exec u:r:magisk:s0 root root -- /init.special_power.sh

on property:sys.boot_completed=1
    trigger enable-low-power

    # write to dmsg
    write /dev/kmsg "mcd: boot completed"

on property:init.svc.recovery=running
    trigger enable-low-power

service msm_irqbalance /vendor/bin/msm_irqbalance -f /vendor/etc/msm_irqbalance.conf
    socket msm_irqbalance seqpacket 660 root system
    class core
    user root
    group root
    writepid /dev/cpuset/system-background/tasks

